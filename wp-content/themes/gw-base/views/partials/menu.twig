{% set menu = menu %}
{% if menu %}
	<ul>
		{% for item in menu %}
			<li class="col {{ item.classes | join(' ') }}">
				<a class="transition-link close-menu" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
				{#% include "menu.twig" with {'menu': item.get_children} %#}
			</li>
		{% endfor %}
	</ul>
{% endif %}
