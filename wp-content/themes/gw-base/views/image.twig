{% extends "attachment.twig" %}

{% block content %}
	<div class="attachment-back-button">
		{# <a href="/photography" class="material-icons md-24 mobile-icon">keyboard_arrow_left
		</a>
		<a href="/photography" class="material-icons md-24 desktop-icon">close
		</a> #}
	</div>
	<div class="attachment-image-page" >
		<div class="attachment-image-wrapper">
			<img class="attachment-image" src={{img_src}} />
		</div>
		<div class="attachment-image-info">
			<div class="pt-margin align-center caption">
				<p class="medium-weight">{{ img_title }}</p>
				{% if i.caption %}
					<p>{{ img_caption }}</p>
				{{% endif %}}
			</div>
		</div>
	</div>
{% endblock %}