{% extends "base.twig" %}

{% block content %}
	
	<div class="explore-page page-body-transition" id="explore-page-swipe">
		<div class="explore-overlay">
			<div class="container align-center">
				<p class="xlg mx-auto">Content will appear at random</p>
				<p class="h6 bold mt-3"><span class="show-lg">Swipe</span><span class="hide-lg">Click</span> images to explore <span class="material-icons md-36">keyboard_arrow_right</span></p>
			</div>
		</div>
		<div class="prev explore-prev hidden">Prev</div>
		<div class="next explore-next">Next</div>

		<div class="explore-more hidden">
			<div class="container align-center">
				{% if explore_finish %}
					<p class="xlg mx-auto">{{explore_finish_text}}</p>
				{% else %}
					<p class="xlg mx-auto">Click to Load More Images</p>
				{% endif %}
			</div>
		</div>
		
		<div class="slideshow explore-slideshow">
			{% for i in images %}
				<div class="slide" data-imageID="{{i.id}}">
					<div class="{% if i.width / i.height > 1 %}slide-landscape{% else %}slide-portrait{% endif %}">
						<div class="explore-wrap" 
							data-image-id="{{i.id}}" 
							data-image-src="{{ TimberImage(i).src('sukkar-lg') }}">
							{% if loop.index < 4 %}
								<img 
									src="{{ TimberImage(i).src('sukkar-lg') }}" 
								>
							{% endif %}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	<div class="orientation-overlay">
		<div><h3>Rotate your phone</h3> {% include 'icons/icon-rotate.svg' %}</div>
	</div>

{% endblock %}
